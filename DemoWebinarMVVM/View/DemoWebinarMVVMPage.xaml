<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:DemoWebinarMVVM" x:Class="DemoWebinarMVVM.DemoWebinarMVVMPage">
<ContentPage.Resources>
		<ResourceDictionary>
      		<local:PositionToColorConverter x:Key="MyColorCvt"/>
	    </ResourceDictionary>
</ContentPage.Resources>
	<StackLayout>
		<Image HeightRequest="200" Source="{Binding PhotoUrl}"/>
		<Label Text="Nombre" />
		<Entry Text="{Binding Name, Mode=TwoWay}"/>
		<Label Text="E-Mail" />
		<Entry Text="{Binding Email, Mode=TwoWay}"/>
		<Label Text="Puesto" TextColor="{Binding Position, Converter={StaticResource MyColorCvt}}" />
		<Entry Text="{Binding Position, Mode=OneWay}"/>
	</StackLayout>
</ContentPage>
